<h1>Listing pictures</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Caption</th>
    <th>Picture</th>
    <th>Sent Date</th>
    <th>User Id</th>
    <th>Event Id</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pictures.each do |picture| %>
  <tr>
    <td><%= picture.id %></td>
    <td><%= picture.caption %></td>
    <td><%= image_tag(picture.picture) %></td>
    <td><%= picture.sent_date %></td>
    <td><%= picture.user_id %></td>
    <td><%= picture.event_id %></td>
  </tr>
<% end %>
</table>